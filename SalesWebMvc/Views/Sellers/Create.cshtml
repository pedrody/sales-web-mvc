@model SalesWebMvc.Models.ViewModels.SellerFormViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <label asp-for="Seller.Name" class="form-label mt-4"></label>
                <input asp-for="Seller.Name" class="form-control">
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Seller.Email" class="form-label mt-4"></label>
                <input asp-for="Seller.Email" class="form-control">
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Seller.BirthDate" class="form-label mt-4"></label>
                <input asp-for="Seller.BirthDate" class="form-control">
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Seller.Salary" class="form-label mt-4"></label>
                <input asp-for="Seller.Salary" class="form-control">
                <span asp-validation-for="Seller.Salary" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Seller.DepartmentId" class="form-label mt-4"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>

            <div>
                <input type="submit" value="Create" class="btn btn-success mt-4">
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}